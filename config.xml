<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.workingedge.phonegap.plugin.IsTabletExample" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IsTablet Example</name>
    <description>
        An example app that demonstrates use of uk.co.workingedge.phonegap.plugin.istablet
    </description>
    <author email="dave@workingedge.co.uk" href="http://www.workingedge.co.uk/dave">
           Dave Alden
    </author>
    <content src="index.html" />
    <access origin="*" />
   
   <plugin name="cordova-plugin-whitelist" version="1" />
   <plugin name="uk.co.workingedge.phonegap.plugin.istablet" version="1" />
   
   <allow-intent href="http://*/*" />
   <allow-intent href="https://*/*" />
   <allow-intent href="tel:*" />
   <allow-intent href="sms:*" />
   <allow-intent href="mailto:*" />
   <allow-intent href="geo:*" />
   <platform name="android">
       <allow-intent href="market:*" />
   </platform>
   <platform name="ios">
       <allow-intent href="itms:*" />
       <allow-intent href="itms-apps:*" />
   </platform>
</widget>
